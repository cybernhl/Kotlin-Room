<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.guadou.lib_baselib.view.titlebar.EasyTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:Easy_title="指引View" />

        <Button
            android:id="@+id/btn_show_guide"
            android:text="展示蒙层指引控件"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--九宫格-分类选项1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_50dp"
            android:orientation="horizontal">

            <!--兼职-->
            <LinearLayout
                android:id="@+id/ll_part_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_marginTop="@dimen/d_16dp">

                    <ImageView
                        android:id="@+id/iv_category_yyjobs"
                        android:layout_width="71dp"
                        android:layout_height="71dp"
                        android:src="@drawable/home_yyjobs_categroy" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_category_parttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_3dp"
                    android:text="AdHoc Jobs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/d_14sp" />

            </LinearLayout>

            <!--CV Builder-->
            <LinearLayout
                android:id="@+id/ll_cv_build"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_marginTop="@dimen/d_16dp">

                    <ImageView
                        android:id="@+id/iv_category_cv_build"
                        android:layout_width="71dp"
                        android:layout_height="71dp"
                        android:src="@drawable/home_cv_build_categroy" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_category_cv_build"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_5dp"
                    android:layout_marginTop="@dimen/d_3dp"
                    android:layout_marginRight="@dimen/d_5dp"
                    android:text="CV Creator"
                    android:textColor="@color/black"
                    android:textSize="@dimen/d_14sp"
                    app:layout_constraintLeft_toLeftOf="@id/iv_category_cv_build"
                    app:layout_constraintRight_toRightOf="@id/iv_category_cv_build"
                    app:layout_constraintTop_toBottomOf="@id/iv_category_cv_build" />

            </LinearLayout>

            <!--Freelancers-->
            <LinearLayout
                android:id="@+id/ll_freelancer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_marginTop="@dimen/d_16dp">

                    <ImageView
                        android:id="@+id/iv_category_freelancer"
                        android:layout_width="71dp"
                        android:layout_height="71dp"
                        android:src="@drawable/iv_home_freelancers_icon" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_category_freelancer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_3dp"
                    android:text="Freelancer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/d_14sp"
                    app:layout_constraintLeft_toLeftOf="@id/iv_category_newsfeed"
                    app:layout_constraintRight_toRightOf="@id/iv_category_newsfeed"
                    app:layout_constraintTop_toBottomOf="@id/iv_category_newsfeed" />

            </LinearLayout>

        </LinearLayout>

        <!--九宫格-分类选项2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/d_22dp">

            <!--FullTime-->
            <LinearLayout
                android:id="@+id/ll_fulltime_jobs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_marginTop="@dimen/d_16dp">

                    <ImageView
                        android:id="@+id/iv_category_fulltime"
                        android:layout_width="71dp"
                        android:layout_height="71dp"
                        android:src="@drawable/iv_full_time_jobs" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_category_fulltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_3dp"
                    android:text="Full Time Jobs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/d_14sp" />

            </LinearLayout>

            <!--Promotion-->
            <LinearLayout
                android:id="@+id/ll_rewards"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_marginTop="@dimen/d_16dp">

                    <ImageView
                        android:id="@+id/iv_category_rewards"
                        android:layout_width="71dp"
                        android:layout_height="71dp"
                        android:src="@drawable/home_rewards_categroy" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_category_rewards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_3dp"
                    android:text="Rewards"
                    android:textColor="@color/black"
                    android:textSize="@dimen/d_14sp" />

            </LinearLayout>

            <!--News Feed-->
            <LinearLayout
                android:id="@+id/ll_news_feed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_marginTop="@dimen/d_16dp">

                    <ImageView
                        android:id="@+id/iv_category_newsfeed"
                        android:layout_width="71dp"
                        android:layout_height="71dp"
                        android:src="@drawable/home_newsfeed_categroy" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_category_news_feed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_3dp"
                    android:text="News Feed"
                    android:textColor="@color/black"
                    android:textSize="@dimen/d_14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <com.guadou.kt_demo.demo.demo18_customview.guide.UserGuideView
        android:id="@+id/guide_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>