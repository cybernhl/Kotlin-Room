<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.guadou.lib_baselib.view.titlebar.EasyTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:Easy_title="测试网络请求" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_net_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单独的请求-串联" />

            <Button
                android:id="@+id/btn_net_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="合并的请求-并发" />

            <Button
                android:id="@+id/btn_net_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加载策略-去重" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展示请求的内容" />

            <TextView
                android:id="@+id/tv_net_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>