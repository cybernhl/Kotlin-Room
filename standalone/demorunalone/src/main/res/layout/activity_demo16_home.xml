<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="com.guadou.kt_demo.demo.demo16_record.Demo16RecordActivity.ClickProxy" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.guadou.lib_baselib.view.titlebar.StatusbarGrayView
            android:id="@+id/status_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试AutoSize CustomView"
            android:textAllCaps="false"
            binding:clicks="@{click.autoSize}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转相机"
            android:textAllCaps="false"
            binding:clicks="@{click.intent}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MediaRecord"
            android:textAllCaps="false"
            binding:clicks="@{click.mediaRecord}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MediaCodec"
            android:textAllCaps="false"
            binding:clicks="@{click.mediaCodec}" />

    </LinearLayout>

</layout>
