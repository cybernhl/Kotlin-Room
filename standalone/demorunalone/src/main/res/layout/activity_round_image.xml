<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">


    <com.guadou.lib_baselib.view.titlebar.EasyTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:Easy_title="展示圆角的图片" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/d_15dp"
            android:paddingTop="@dimen/d_15dp"
            android:paddingRight="@dimen/d_15dp">

            <com.guadou.lib_baselib.view.CircleImageView
                android:id="@+id/iv_circle_img"
                android:layout_width="@dimen/d_150dp"
                android:layout_height="@dimen/d_150dp" />

            <com.guadou.kt_demo.demo.demo7_imageload_glide.round.ClipPathRoundImageView
                android:id="@+id/iv_round_clip_path"
                android:layout_width="@dimen/d_150dp"
                android:layout_height="@dimen/d_150dp"
                android:layout_marginTop="@dimen/d_10dp"
                android:scaleType="centerCrop" />

            <com.guadou.kt_demo.demo.demo7_imageload_glide.round.XfermodeRoundImageView
                android:id="@+id/iv_round_xfermode"
                android:layout_width="@dimen/d_150dp"
                android:layout_height="@dimen/d_150dp"
                android:layout_marginTop="@dimen/d_10dp"
                android:scaleType="centerCrop" />

            <com.guadou.kt_demo.demo.demo7_imageload_glide.round.ShaderRoundImageView
                android:id="@+id/iv_round_shared"
                android:layout_width="@dimen/d_150dp"
                android:layout_height="@dimen/d_150dp"
                android:layout_marginTop="@dimen/d_10dp"
                android:scaleType="centerCrop" />

            <com.guadou.lib_baselib.view.RoundCircleImageView
                android:id="@+id/iv_custom_round"
                android:layout_width="@dimen/d_150dp"
                android:layout_height="@dimen/d_150dp"
                android:layout_marginTop="@dimen/d_10dp"
                app:isCircle="false"
                app:round_background_color="@color/gray"
                app:round_background_drawable="@drawable/shape_blue"
                app:round_radius="@dimen/d_20dp" />

            <com.guadou.lib_baselib.view.RoundCircleImageView
                android:id="@+id/iv_custom_round2"
                android:layout_width="@dimen/d_150dp"
                android:layout_height="@dimen/d_150dp"
                android:layout_marginTop="@dimen/d_10dp"
                app:bottomLeft="@dimen/d_20dp"
                app:bottomRight="@dimen/d_40dp"
                app:isCircle="false"
                app:round_background_drawable="@drawable/chengxiao"
                app:topLeft="@dimen/d_40dp"
                app:topRight="@dimen/d_20dp" />

            <com.guadou.lib_baselib.view.RoundCircleImageView
                android:id="@+id/iv_custom_round3"
                android:layout_width="@dimen/d_150dp"
                android:layout_height="@dimen/d_150dp"
                android:layout_marginTop="@dimen/d_10dp"
                app:bottomLeft="@dimen/d_20dp"
                app:bottomRight="@dimen/d_40dp"
                app:isCircle="false"
                app:round_background_color="@color/gray"
                app:topLeft="@dimen/d_40dp"
                app:topRight="@dimen/d_20dp" />

            <com.guadou.lib_baselib.view.CustomRadiusImageView
                android:id="@+id/iv_radius"
                android:layout_width="@dimen/d_150dp"
                android:layout_height="@dimen/d_150dp"
                android:layout_marginTop="@dimen/d_10dp"
                android:scaleType="centerCrop"
                app:left_bottom_radius="@dimen/d_20dp"
                app:left_top_radius="@dimen/d_40dp"
                app:right_bottom_radius="@dimen/d_40dp"
                app:right_top_radius="@dimen/d_20dp" />


            <ImageView
                android:id="@+id/iv_glide"
                android:layout_width="@dimen/d_150dp"
                android:layout_height="@dimen/d_150dp"
                android:layout_marginTop="@dimen/d_10dp" />

            <com.guadou.kt_demo.demo.demo7_imageload_glide.layout.RoundCircleFrameLayout
                android:layout_width="@dimen/d_150dp"
                android:layout_height="@dimen/d_150dp"
                android:layout_marginTop="@dimen/d_10dp"
                app:round_radius="@dimen/d_40dp">

                <ImageView
                    android:id="@+id/iv_glide2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </com.guadou.kt_demo.demo.demo7_imageload_glide.layout.RoundCircleFrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统的圆角控件" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeable_img"
                android:layout_width="@dimen/d_150dp"
                android:layout_height="@dimen/d_150dp"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>