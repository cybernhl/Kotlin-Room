<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="com.guadou.kt_demo.demo.demo13_motionlayout.Demo13MotionActivity.ClickProxy" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.guadou.lib_baselib.view.titlebar.EasyTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:Easy_title="Motion Layout" />

        <Button
             binding:clicks="@{click.gotoJavaContrcol}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java简单控制" />

        <Button
            binding:clicks="@{click.gotoXmlContrcol}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xml文件控制" />

        <Button
            binding:clicks="@{click.appbar}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="协同AppbarLayout" />

        <Button
            binding:clicks="@{click.viewPager}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="协同ViewPager" />

        <Button
            binding:clicks="@{click.nav01}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="对比01" />

    </LinearLayout>

</layout>

