<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--CircleImageView-->
    <declare-styleable name="FloatLinearLayout_Layout">

        <attr name="layout_pin" format="boolean" />

    </declare-styleable>

    <declare-styleable name="ConsecutiveScrollerLayout_Layout">
        <attr name="layout_isConsecutive" format="boolean" />
        <attr name="layout_isNestedScroll" format="boolean" />
        <attr name="layout_isSticky" format="boolean" />
        <attr name="layout_isTriggerScroll" format="boolean" />
        <attr name="layout_isSink" format="boolean" />
        <attr name="layout_align" format="enum">
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
            <enum name="CENTER" value="3" />
        </attr>
        <attr name="layout_scrollChild" format="reference" />
    </declare-styleable>
    <declare-styleable name="ConsecutiveScrollerLayout">
        <attr name="isPermanent" format="boolean" />
        <attr name="stickyOffset" format="dimension" />
        <attr name="autoAdjustHeightAtBottomView" format="boolean" />
        <attr name="adjustHeightOffset" format="dimension" />
        <attr name="disableChildHorizontalScroll" format="boolean" />
    </declare-styleable>


    <declare-styleable name="EasyCoordinatorView">
        <attr name="dependsOn" format="reference" />
        <attr name="dependType">
            <enum name="height" value="0" />
            <enum name="width" value="1" />
            <enum name="x" value="2" />
            <enum name="y" value="3" />
        </attr>

        <attr name="dependTargetX" format="dimension" />
        <attr name="dependTargetY" format="dimension" />
        <attr name="dependTargetWidth" format="dimension" />
        <attr name="dependTargetHeight" format="dimension" />

        <attr name="targetX" format="dimension" />
        <attr name="targetY" format="dimension" />
        <attr name="targetWidth" format="dimension" />
        <attr name="targetHeight" format="dimension" />

        <attr name="targetBackgroundColor" format="color" />
        <attr name="targetAlpha" format="float" />
        <attr name="targetRotateX" format="float" />
        <attr name="targetRotateY" format="float" />
        <attr name="animation" format="reference" />

    </declare-styleable>


    <attr name="is_circle" format="boolean" />
    <attr name="round_radius" format="dimension" />
    <attr name="topLeft" format="dimension" />
    <attr name="topRight" format="dimension" />
    <attr name="bottomLeft" format="dimension" />
    <attr name="bottomRight" format="dimension" />
    <attr name="round_circle_background_color" format="color" />
    <attr name="round_circle_background_drawable" format="reference" />
    <attr name="is_bg_center_crop" format="boolean" />
    <declare-styleable name="RoundCircleConstraintLayout">
        <attr name="is_circle" />
        <attr name="round_radius" />
        <attr name="topLeft" />
        <attr name="topRight" />
        <attr name="bottomLeft" />
        <attr name="bottomRight" />
        <attr name="round_circle_background_color" />
        <attr name="round_circle_background_drawable" />
        <attr name="is_bg_center_crop" />
    </declare-styleable>
    <declare-styleable name="RoundCircleFrameLayout">
        <attr name="is_circle" />
        <attr name="round_radius" />
        <attr name="topLeft" />
        <attr name="topRight" />
        <attr name="bottomLeft" />
        <attr name="bottomRight" />
        <attr name="round_circle_background_color" />
        <attr name="round_circle_background_drawable" />
        <attr name="is_bg_center_crop" />
    </declare-styleable>
    <declare-styleable name="RoundCircleLinearLayout">
        <attr name="is_circle" />
        <attr name="round_radius" />
        <attr name="topLeft" />
        <attr name="topRight" />
        <attr name="bottomLeft" />
        <attr name="bottomRight" />
        <attr name="round_circle_background_color" />
        <attr name="round_circle_background_drawable" />
        <attr name="is_bg_center_crop" />
    </declare-styleable>
    <declare-styleable name="RoundCircleRelativeLayout">
        <attr name="is_circle" />
        <attr name="round_radius" />
        <attr name="topLeft" />
        <attr name="topRight" />
        <attr name="bottomLeft" />
        <attr name="bottomRight" />
        <attr name="round_circle_background_color" />
        <attr name="round_circle_background_drawable" />
        <attr name="is_bg_center_crop" />
    </declare-styleable>
    <declare-styleable name="RoundCircleRecyclerView">
        <attr name="is_circle" />
        <attr name="round_radius" />
        <attr name="topLeft" />
        <attr name="topRight" />
        <attr name="bottomLeft" />
        <attr name="bottomRight" />
        <attr name="round_circle_background_color" />
        <attr name="round_circle_background_drawable" />
        <attr name="is_bg_center_crop" />
    </declare-styleable>
    <declare-styleable name="RoundCircleScrollView">
        <attr name="is_circle" />
        <attr name="round_radius" />
        <attr name="topLeft" />
        <attr name="topRight" />
        <attr name="bottomLeft" />
        <attr name="bottomRight" />
        <attr name="round_circle_background_color" />
        <attr name="round_circle_background_drawable" />
        <attr name="is_bg_center_crop" />
    </declare-styleable>
    <declare-styleable name="RoundCircleNestedScrollView">
        <attr name="is_circle" />
        <attr name="round_radius" />
        <attr name="topLeft" />
        <attr name="topRight" />
        <attr name="bottomLeft" />
        <attr name="bottomRight" />
        <attr name="round_circle_background_color" />
        <attr name="round_circle_background_drawable" />
        <attr name="is_bg_center_crop" />
    </declare-styleable>


    <!-- 圆形进度条 -->
    <declare-styleable name="MyCircleProgressView">

        <attr name="mCirWidth" format="dimension" />
        <attr name="mCirColor" format="color" />
        <attr name="mBgCirWidth" format="dimension" />
        <attr name="mBgCirColor" format="color" />
        <attr name="animTime" format="integer" />
        <attr name="value" format="integer" />
        <attr name="maxvalue" format="integer" />
        <attr name="startAngle" format="float" />
        <attr name="sweepAngle" format="float" />
        <attr name="valueSize" format="dimension" />
        <attr name="valueColor" format="color" />
        <attr name="unit" format="string" />
        <attr name="hint" format="string" />
        <attr name="hintSize" format="dimension" />
        <attr name="hintColor" format="color" />
        <attr name="gradient" format="dimension" />
        <attr name="isGradient" format="boolean" />
        <attr name="shadowSize" format="float" />
        <attr name="shadowColor" format="color" />
        <attr name="shadowShow" format="boolean" />
        <attr name="digit" format="integer" />
        <attr name="isanim" format="boolean" />
    </declare-styleable>

    <!--  评分星星控件  -->
    <declare-styleable name="StarScoreView">
        <!--星星间距-->
        <attr name="starDistance" format="dimension" />
        <!--星星大小-->
        <attr name="starSize" format="dimension" />
        <!--星星个数-->
        <attr name="starCount" format="integer" />
        <!--星星已评分图片-->
        <attr name="starScoredDrawable" format="reference" />
        <!--星星未评分图片-->
        <attr name="starUnscoredDrawable" format="reference" />
        <!--是否可以点击-->
        <attr name="starIsTouchEnable" format="boolean" />
        <!--是否显示整数-->
        <attr name="starIsOnlyIntegerScore" format="boolean" />
    </declare-styleable>

</resources>
