<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.guadou.lib_baselib.view.titlebar.EasyTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:Easy_title="图片选择与裁剪压缩" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择图片" />

        <Button
            android:id="@+id/btn_carme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择相机" />

        <Button
            android:id="@+id/btn_transfrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转换" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_10dp"
        android:text="下面展示一些自定义动画的Loading" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.guadou.lib_baselib.view.progress.rotate.CircleLoadingView
            android:layout_width="@dimen/d_50dp"
            android:layout_height="@dimen/d_50dp"
            android:background="#fff1c02e"
            app:loading_renderer="LevelLoadingRenderer" />

        <com.guadou.lib_baselib.view.progress.rotate.CircleLoadingView
            android:layout_width="@dimen/d_50dp"
            android:layout_height="@dimen/d_50dp"
            android:layout_marginLeft="@dimen/d_10dp"
            android:background="#fff1c02e"
            app:loading_renderer="MaterialLoadingRenderer" />

        <com.guadou.lib_baselib.view.progress.rotate.CircleLoadingView
            android:layout_width="@dimen/d_50dp"
            android:layout_height="@dimen/d_50dp"
            android:layout_marginLeft="@dimen/d_10dp"
            android:background="#fff1c02e"
            app:loading_renderer="GearLoadingRenderer" />

        <com.guadou.lib_baselib.view.progress.rotate.CircleLoadingView
            android:id="@+id/clv_4"
            android:layout_width="@dimen/d_50dp"
            android:layout_height="@dimen/d_50dp"
            android:layout_marginLeft="@dimen/d_10dp"
            android:background="#fff1c02e"
            app:loading_renderer="WhorlLoadingRenderer" />

    </LinearLayout>


    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_select_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>